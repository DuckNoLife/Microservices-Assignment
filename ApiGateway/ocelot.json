{
  "Routes": [
    {
      // 1. CẤU HÌNH CHO USER SERVICE (Auth)
      // Khách gọi: localhost:5000/auth/...
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],

      // Gateway chuyển tới: userservice (cổng 8080)
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "userservice",
          "Port": 8080
        }
      ]
    },
    {
      // 2. CẤU HÌNH CHO USER SERVICE (Profile)
      // Khách gọi: localhost:5000/user/...
      "UpstreamPathTemplate": "/user/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],

      "DownstreamPathTemplate": "/api/user/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "userservice",
          "Port": 8080
        }
      ]
    },
    {
      // 3. CẤU HÌNH CHO SHORTEN URL SERVICE
      // Khách gọi: localhost:5000/url/...
      "UpstreamPathTemplate": "/url/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],

      // Gateway chuyển tới: shortenurl-api (cổng 80 - theo file docker của bạn kia)
      "DownstreamPathTemplate": "/api/url/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "shortenurl-api",
          "Port": 80
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}